{
  "expo": {
    "name": "expo-boilerplate",
    "slug": "expo-boilerplate",
    "platforms": [
      "ios",
      "android"
    ],
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "enabled": true,
      "checkAutomatically": "ON_ERROR_RECOVERY",
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "src/**/*",
      "assets/**/*",
      "translations/**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "splash": {
        "image": "./assets/images/splash.png",
        "resizeMode": "contain",
        "backgroundColor": "#000000"
      },
      "bundleIdentifier": "com.author.mobile",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Camera/Microphone are needed to scan",
        "NSMicrophoneUsageDescription": "Camera/Microphone are needed to scan",
        "NSLocationWhenInUseUsageDescription": "Location is needed for Map feature",
        "NFCReaderUsageDescription": "NFC is required to scan unique IDs",
        "NSBluetoothAlwaysUsageDescription": "Bluetooth access is required to scan",
        "NSBluetoothPeripheralUsageDescription": "Bluetooth access is required to scan",
        "com.apple.developer.nfc.readersession.formats": [
          "NDEF",
          "TAG"
        ]
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.author.mobile",
      "versionCode": 1,
      "icon": "./assets/images/icon.png",
      "splash": {
        "mdpi": "./assets/images/splash.png",
        "hdpi": "./assets/images/splash.png",
        "xhdpi": "./assets/images/splash.png",
        "xxhdpi": "./assets/images/splash.png",
        "xxxhdpi": "./assets/images/splash.png",
        "resizeMode": "cover"
      },
      "useNextNotificationsApi": true,
      "permissions": [
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.BLUETOOTH"
      ]
    }
  }
}
